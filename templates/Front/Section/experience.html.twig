<section id="resume" class="resume pb-1">
    <div class="container" data-aos="fade-up">
        <div class="section-title">
            <h2>Expériences Professionnelles</h2>
        </div>
        <div class="row">
            {% for experience in resume.experiences %}
            <div class="col-lg-12">
                <h3 class="resume-title">{{ experience.company }} - {{ experience.job}} </h3>
                <div class="resume-item pb-0">
                    <em class="fw-bold">
                        De {{ experience.dateBegin|date("m-Y") }}
                        {% if experience.dateEnd is null %}
                            et actuellement en poste
                        {% else %}
                        à  {{ experience.dateEnd|date("m-Y") }}
                        {% endif %}
                    </em>
                    <h4 class="mt-1">Missions :</h4>
                    {{ experience.description | raw }}
                    <h4>Environnement :</h4>
                    <p><em>{{ experience.technologies }}</em></p>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
</section>
