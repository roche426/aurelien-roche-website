<section id="about" class="about pb-1">
    <div class="container" data-aos="fade-up">
        <div class="section-title">
            <h2>Qui suis-je</h2>
        </div>
        <div class="row">
            <div class="col-lg-4">
                <img src="{{ asset('img/about.jpg') }}" class="img-fluid" alt="">
{#                <img src="{{ presentation.accroche }}" class="img-fluid" alt="">#}
            </div>
            <div class="col-lg-8 pt-4 pt-lg-0 content">
                <h3>{{ presentation.job }}</h3>
                <p class="fw-bold">Quelques mots pour me présenter!</p>
                {{ presentation.description|raw  }}
                <div class="row mt-4">
                    <div class="col-lg-6">
                        <ul>
                            <li><i class="bx bxs-briefcase"></i> <strong>Poste:</strong> <span>{{ presentation.poste }}</span></li>
                            <li><i class="bx bxs-bus-school"></i> <strong>Cursus:</strong> <span>Commerce / Informatique</span></li>
                            <li><i class="bx bxs-city"></i> <strong>Mobilité:</strong> <span>{{ presentation.mobilite }}</span></li>
                            <li><i class="bx bxs-envelope"></i> <strong>Email:</strong> <span>{{ presentation.email }}</span></li>
                        </ul>
                    </div>
                    <div class="col-lg-6">
                        <ul>
                            <li><i class="bx bxs-id-card"></i> <strong>Age:</strong><span>{{ presentation.age }} ans</span></li>
                            <li><i class="bx bxs-message-rounded-detail"></i> <strong>Langues:</strong> <span>{{ presentation.langues|join(' / ') }}</span></li>
                            <li><i class="bx bxs-game"></i> <strong>Intérêts:</strong> <span>{{ presentation.hobbies|join(', ') }}</span></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>