<section id="resume" class="resume pb-1">
    <div class="container" data-aos="fade-up">
        <div class="section-title">
            <h2>Expériences Professionnelles</h2>
        </div>
        <div class="row">
            {% for resume in resumes %}
            <div class="col-lg-12">
                <h3 class="resume-title">{{ resume.entreprise }} - {{ resume.poste}} </h3>
                <div class="resume-item pb-0">
                    <em class="fw-bold">
                        De {{ resume.dateDebut|date("m-Y") }}
                        {% if resume.dateFin is null %}
                            et actuellement en poste
                        {% else %}
                        à  {{ resume.dateFin|date("m-Y") }}
                        {% endif %}
                    </em>
                    <h4 class="mt-1">Missions :</h4>
                    <ul>
                        {% for descriptif in resume.descriptifs %}
                        <li>{{ descriptif }}</li>
                        {% endfor %}
                    </ul>
                    <h4>Environnement :</h4>
                    <p><em>{{  resume.environnement|join( '- ')  }}</em></p>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
</section>
